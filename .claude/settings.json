{
  "permissions": {
    "allow": [
      "Bash(npm install)",
      "Bash(npx husky init)",
      "Bash(npx biome:*)",
      "Bash(git rm:*)",
      "Bash(python3:*)",
      "Bash(git mv:*)",
      "Bash(npm run build:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/lint.sh"
          }
        ]
      }
    ]
  }
}
